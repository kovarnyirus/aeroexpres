include ../../blocks/footer/footer
include ../../blocks/popup/popup
- set_bemto_settings({ modifier: "--" })

doctype html
html(lang="ru")
	head
		meta(charset="utf-8")
		block title
			title title
		meta(name="description", content="о чем страница")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
