include ../mixins/mixins
mixin popup-active()
	+b.popup#popup-active.zoom-anim-dialog.mfp-hide
		+e.wrapper
			+e.H5.title  Уважаемый пользователь, как вы приобрели пакет услуг?
			p  Благодаря предварительной маркировке личных вещей специальными метками (брелоками, наклейками, браслетами, кулонами, багажными бирками) с уникальным идентификационным (ID) номером, а также уникальным разработкам в области мобильных приложений по защите личных вещей, КликТуАйДи эффективно помогает вернуть владельцу потерянные вещи из любой точки мира.
			+e.buttons
				a.btn.btn--fill(href='#') На кассе
				a.btn.btn--fill.popup-with-move-anim(href='#popup-id') Через сайт CLICK2ID


mixin popup-id()
	+b.popup.zoom-anim-dialog.mfp-hide#popup-id
		+e.wrapper
			+e.H5.title  Введите ваш id номер пакета услуг
			p  Благодаря предварительной маркировке личных вещей специальными метками (брелоками, наклейками, браслетами, кулонами, багажными бирками).
			+input('text', 'ID пакета услуг', 'Введите данные', true)
			+e.buttons
				a.btn.btn--fill(href='#') Далее
				a.btn.btn(href='#') Отмена

mixin popup-email()
	+b.popup.zoom-anim-dialog.mfp-hide#popup-email
		+e.wrapper
			+e.H5.title  Введите Ваш e-mail:
			p  Адрес электронной почты нужен для отправки чека при покупке.
			+input('text', 'E-mail', 'Введите данные', true, 'email')
			+e.buttons
				a.btn.btn--fill(href='#') Далее
				a.btn.btn(href='#') Отмена




+popup-active()
+popup-id()
+popup-email()
